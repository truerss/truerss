<div class="uk-modal-dialog">
    <button class="uk-modal-close-default" type="button" uk-close></button>
    <div class="uk-modal-header">
        <h2 class="uk-modal-title">Settings</h2>
    </div>
    <div class="uk-modal-body">
        <form class="uk-form-horizontal uk-margin-large uk-margin-remove-top">
            <% for(var i = 0; i < settings.length; i++) { %>
                <div class="uk-margin-medium" id="settings-<%= settings[i].key() %>">

                    <div class="uk-form-label">
                        <span class="uk-text-large"><%= settings[i].key() %></span><br/>
                        <span><%= settings[i].description() %></span>
                    </div>

                    <div class="uk-form-controls">
                        <% if (settings[i].is_radio()) { %>
                            <div class="uk-form-controls-text">
                                <ul class="uk-subnav uk-subnav-pill settings-<%= settings[i].key() %>" uk-switcher>
                                    <li class="<% if (settings[i].is_eq(true)) { %> uk-active <% } %>">
                                        <a href="#" data-key="<%= settings[i].key() %>" data-value="1">yes</a>
                                    </li>
                                    <li class="uk-margin-remove uk-padding-remove <% if (settings[i].is_eq(false)) { %> uk-active <% } %>">
                                        <a href="#" data-key="<%= settings[i].key() %>" data-value="0">no</a>
                                    </li>
                                </ul>
                            </div>
                        <% } else { %>
                                <select class="uk-select uk-form-width-xsmall mt3" name="<%= settings[i].key() %>">
                                    <% for(var j = 0; j < settings[i].options().length; j++) { %>
                                        <option <% if (settings[i].is_eq(settings[i].options()[j])) { %> selected <% } %>>
                                            <%= settings[i].options()[j] %>
                                        </option>
                                    <% } %>
                                </select>
                        <% } %>

                    </div>
                </div>
            <% } %>
        </form>
    </div>
    <div class="uk-modal-footer uk-text-right">
        <button class="uk-button uk-button-default uk-modal-close" type="button">Cancel</button>
        <button id="settings-save" class="uk-button uk-button-primary" type="button">Save</button>
    </div>
</div>

