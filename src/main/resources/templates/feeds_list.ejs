<% for (i = 0; i < feeds.length; i ++) { %>
    <div class="uk-section uk-section-muted uk-padding-small mt3">
        <div uk-grid>
          <span class="uk-text-light uk-text-large uk-width-expand">
            <%= feeds[i].title() %>
          </span>
          <span class="uk-text-light uk-text-right uk-text-large uk-width-auto">
            <% if (feeds[i].favorite()) { %>
                  <a data-feed-id="<%= feeds[i].id() %>" href="#"
                     class="unfavorite" title="remove from favorites" uk-icon="star"></a>
            <% } else {  %>
                <a  data-feed-id="<%= feeds[i].id() %>" href="#"
                   class="favorite" title="mark as favorite" uk-icon="star"></a>
            <% } %>
          </span>
        </div>
        <p class="uk-padding-remove uk-margin-auto-top">
            <%= feeds[i].description() %>
        </p>
        <div class="uk-grid">
            <div class="uk-width-1-3"><%= feeds[i].published_date().format("YYYY-MM-DD") %></div>
            <div class="uk-width-1-3"><a href="<%= feeds[i].url() %>" class="uk-link-text">To original</a></div>
            <div class="uk-width-1-3"><a class="uk-link-muted" href="#">TODO: View content</a></div>
        </div>
    </div>
<% } %>